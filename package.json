{
  "name": "StoreControl",
  "productName": "StoreControl",
  "version": "0.6.1",
  "description": "StoreControl",
  "repository": "https://github.com/dougmaitelli/StoreControl",
  "license": "UNLICENSED",
  "keywords": [],
  "author": "Douglas Maitelli",
  "homepage": "",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "install-wsl": "yarn && yarn remove electron --dev && export npm_config_platform=win32 && yarn add electron --dev && unset npm_config_platform",
    "start": "electron .",
    "dev": "electron . --debug",
    "dist": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "release": "build --publish onTagOrDraft"
  },
  "build": {
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "publish": [
      "github"
    ]
  },
  "xo": {
    "space": true,
    "globals": [
      "document",
      "angular",
      "$",
      "moment",
      "Chart",
      "swal"
    ]
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.7",
    "angular": "^1.6.6",
    "animate.css": "^3.5.2",
    "chart.js": "^2.6.0",
    "electron-log": "^2.2.9",
    "electron-updater": "^2.13.0",
    "jquery": "^3.2.1",
    "jquery-mask-plugin": "^1.14.12",
    "moment": "^2.19.1",
    "nedb": "^1.8.0",
    "semantic-ui-css": "^2.2.12",
    "sweetalert": "^1.1.3"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2"
  }
}
